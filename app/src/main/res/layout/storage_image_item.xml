<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan_background">

        <ImageView
            android:id="@+id/view_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/view_name"
            android:layout_width="wrap_content"
            android:maxWidth="190dp"
            android:layout_height="wrap_content"
            android:maxHeight="70dp"
            tools:text="File namemkmgdlfgimdlfgikdlfgfdgfgdfgdfgdfgdfgfdfg "
            android:textSize="18sp"
            android:layout_toRightOf="@id/view_image"
            android:layout_toEndOf="@id/view_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/view_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete_gray_ic"
            android:layout_toRightOf="@id/view_image"
            android:layout_below="@id/view_name"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:id="@+id/view_download"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/download_ic"
            android:layout_toRightOf="@id/view_delete"
            android:layout_below="@id/view_name"
            android:layout_marginLeft="110dp" />

        <TextView
            android:id="@+id/view_size"
            android:layout_width="wrap_content"
            android:maxWidth="190dp"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            tools:text="size"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"/>

        <!--<TextView-->
            <!--android:id="@+id/type"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:maxWidth="190dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:maxHeight="50dp"-->
            <!--android:text="type: "-->
            <!--android:textSize="18sp"-->
            <!--android:layout_below="@id/view_name"-->
            <!--android:layout_toLeftOf="@id/view_type"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginRight="5dp"/>-->

        <TextView
            android:id="@+id/view_type"
            android:layout_width="wrap_content"
            android:maxWidth="190dp"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            tools:text=".png"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_size"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>